<Window x:Class="TravelManagementApp.Views.TripListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trip List" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Trip List" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="15"/>

        <DataGrid x:Name="dgTrips" Grid.Row="1" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  MouseDoubleClick="DgTrips_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding TripID}" Width="50"/>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="120"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C2}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnAdd" Content="Add Trip" 
                    Width="120" Click="BtnAdd_Click"/>
            <Button x:Name="btnEdit" Content="Edit Trip" 
                    Width="120" Click="BtnEdit_Click"/>
            <Button x:Name="btnClose" Content="Close" 
                    Width="120" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>