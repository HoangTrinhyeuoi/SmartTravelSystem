<Window x:Class="TravelManagementApp.Views.MyBookingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Bookings" Height="550" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="My Bookings" 
                   FontSize="20" 
                   FontWeight="Bold"
                   Margin="15"/>

        <DataGrid x:Name="dgBookings" Grid.Row="1" 
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="False"
                  Margin="10,0,10,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Booking ID" Binding="{Binding BookingID}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Trip Code" Binding="{Binding Trip.Code}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Trip.Destination}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Trip.Price, StringFormat=C2}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Booking Date" Binding="{Binding BookingDate, StringFormat=dd/MM/yyyy}" Width="120" IsReadOnly="True"/>
                <DataGridTemplateColumn Header="Status" Width="130">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValue="{Binding Status, Mode=OneWay}"
                                      SelectedValuePath="Content"
                                      SelectionChanged="CboStatus_SelectionChanged"
                                      DataContext="{Binding}">
                                <ComboBoxItem Content="Pending"/>
                                <ComboBoxItem Content="Confirmed"/>
                                <ComboBoxItem Content="Cancelled"/>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnFilterPending" Content="Filter Pending" 
                    Width="120" Margin="5" Click="BtnFilterPending_Click"/>
            <Button x:Name="btnShowAll" Content="Show All" 
                    Width="120" Margin="5" Click="BtnShowAll_Click"/>
            <Button x:Name="btnCreateBooking" Content="Create New Booking" 
                    Width="150" Margin="5" Click="BtnCreateBooking_Click"/>
            <Button x:Name="btnClose" Content="Close" 
                    Width="120" Margin="5" Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>