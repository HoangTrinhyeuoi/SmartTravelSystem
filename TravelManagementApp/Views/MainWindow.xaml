<Window x:Class="TravelManagementApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Travel System - Main" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock x:Name="txtWelcome" 
                           Foreground="White" 
                           FontSize="18" 
                           FontWeight="Bold"/>
                <Button x:Name="btnLogout" 
                        Content="Logout" 
                        Width="100" 
                        HorizontalAlignment="Right"
                        Click="BtnLogout_Click"/>
            </Grid>
        </Border>

        <!-- Menu -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Main Menu" 
                       FontSize="20" 
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <Button x:Name="btnTripList" 
                        Content="Trip List" 
                        Height="50" 
                        FontSize="16"
                        Margin="50,10"
                        Click="BtnTripList_Click"/>
                <Button x:Name="btnMyBookings" 
                        Content="My Bookings" 
                        Height="50" 
                        FontSize="16"
                        Margin="50,10"
                        Click="BtnMyBookings_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>