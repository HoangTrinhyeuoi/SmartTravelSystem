<Window x:Class="TravelManagementApp.Views.CreateBookingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create New Booking" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Select an Available Trip" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <DataGrid x:Name="dgAvailableTrips" Grid.Row="1" 
                  Height="200"
                  AutoGenerateColumns="False"
                  SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat=C2}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Booking Date:" Width="120"/>
                <DatePicker x:Name="dpBookingDate" Width="200" IsEnabled="False"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Label Content="Status:" Width="120"/>
                <TextBox x:Name="txtStatus" Width="200" IsEnabled="False" Text="Pending"/>
            </StackPanel>
        </StackPanel>

        <Label x:Name="lblError" Grid.Row="3" 
               Foreground="Red" 
               HorizontalAlignment="Center"
               Margin="0,10,0,0"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnCreate" Content="Create Booking" 
                    Width="130" Click="BtnCreate_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" 
                    Width="100" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>